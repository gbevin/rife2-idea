<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>rife.idea</id>
    <name>RIFE2</name>
    <vendor>gbevin</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type -->
        <fileType
                name="RIFE2"
                implementationClass="rife.idea.file.Rife2FileType"
                fieldName="INSTANCE"
                language="RIFE2"
                patterns="*.html"/>

        <!-- Template parser -->
        <lang.parserDefinition
                language="RIFE2"
                implementationClass="rife.idea.parser.Rife2ParserDefinition"/>

        <!-- Syntax highlighting -->
        <lang.syntaxHighlighterFactory
                language="RIFE2"
                implementationClass="rife.idea.highlighter.Rife2SyntaxHighlighterFactory"/>

        <colorSettingsPage
                implementation="rife.idea.highlighter.Rife2ColorSettingsPage"/>

        <applicationService
                serviceImplementation="rife.idea.services.Rife2ApplicationService"/>
        <projectService
                serviceImplementation="rife.idea.services.Rife2ProjectService"/>

        <!-- Language factories -->
        <lang.fileViewProviderFactory
                language="RIFE2" implementationClass="rife.idea.file.Rife2FileViewProviderFactory"/>

        <!-- Editor -->
        <lang.commenter
                language="RIFE2" implementationClass="rife.idea.editor.comments.Rife2Commenter"/>

        <!-- Code completion -->
        <typedHandler
                implementation="rife.idea.editor.actions.Rife2TypedHandler"/>
        <completion.contributor
                language="RIFE2"
                implementationClass="rife.idea.completion.Rife2FilteredValuesCompletionContributor"/>

        <!-- Formatting -->
        <lang.formatter
                language="RIFE2"
                implementationClass="rife.idea.format.Rife2FormattingModelBuilder"/>
        <lang.substitutor
                language="HTML"
                implementationClass="rife.idea.file.Rife2LanguageSubstitutor"/>
    </extensions>

    <applicationListeners>
    </applicationListeners>
</idea-plugin>
